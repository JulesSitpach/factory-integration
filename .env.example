# Factory Integration - Environment Variables
# Copy this file to .env.local and fill in the values

# Node environment
NODE_ENV=development # development, production, test

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-chars-long

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret-same-as-in-supabase-project

# Database (if using direct connection instead of Supabase client)
DATABASE_URL=postgresql://postgres:password@localhost:5432/factory_integration

# Email Configuration (for auth emails, notifications)
EMAIL_SERVER=smtp://username:password@smtp.example.com:587
EMAIL_FROM=noreply@factoryintegration.com

# Authentication Providers (if using OAuth)
GITHUB_ID=your-github-oauth-id
GITHUB_SECRET=your-github-oauth-secret
GOOGLE_ID=your-google-oauth-id
GOOGLE_SECRET=your-google-oauth-secret

# API Keys for Third-Party Services
# ERP Integration
ERP_API_URL=https://erp.example.com/api
ERP_API_KEY=your-erp-api-key

# MES Integration
MES_API_URL=https://mes.example.com/api
MES_API_KEY=your-mes-api-key

# SCADA/IoT Integration
IOT_BROKER_URL=mqtt://iot-broker.example.com:1883
IOT_BROKER_USERNAME=your-iot-username
IOT_BROKER_PASSWORD=your-iot-password

# Logging & Monitoring
LOG_LEVEL=info # debug, info, warn, error
SENTRY_DSN=your-sentry-dsn

# Feature Flags
FEATURE_COST_CALCULATOR=true
FEATURE_PRICING_OPTIMIZER=false
FEATURE_REAL_TIME_MONITORING=false

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://factoryintegration.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60 # in seconds
